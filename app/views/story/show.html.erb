<div class="prefix_1 grid_11"><h2> <%= "#{@story.name} (#{@story.id})" %></h2></div>
<div class="clear"></div>
<div class="prefix_2 grid_4"><p><%= "Points: #{@story.estimate}" %></p></div>
<div class="grid_4"><p><%= "Status: #{@story.current_state}" %></p></div>
<div class="clear"></div>
<div class="prefix_2 grid_10"><p><%= "Labels: #{@story.labels}" %></p></div>
<div class="clear"></div>
<div class="prefix_2 grid_10"><p><%= @story.description %></p></div>
<div class="clear"></div>
<div class="prefix_2 grid_4"><%= link_to "Open Voting", open_voting_room_story_path(:id => @story.id), :remote=> true %></div>
<div id="open_voting">
  <div id="vote_progress"></div>
  <div align="center"><%= link_to "Close Voting", close_voting_room_story_path(:id => @story.id), :remote=> true %></div>
</div>
<div id="vote_results"></div>